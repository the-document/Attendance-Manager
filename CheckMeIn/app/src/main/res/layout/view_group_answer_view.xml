<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <CheckBox
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:id="@+id/view_group_answer_view_checkbox_correct_answer"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:layout_marginRight="8dp"
        android:button="@drawable/custom_checkbox_correct_answer_selector"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/view_group_answer_view_edt_answer_text"
        android:background="@drawable/custom_button_organization"
        android:hint="Câu trả lời"
        android:layout_weight="8"
        android:gravity="center" />

    <Button
        android:id="@+id/view_group_answer_view_button_remove_answer"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/ic_delete_black_24dp"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:layout_marginLeft="8dp"/>

</merge>