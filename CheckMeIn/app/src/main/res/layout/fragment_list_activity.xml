<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ListActivityFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <LinearLayout
            android:layout_width="380dp"
            android:layout_height="180dp"
            android:layout_gravity="center"
            android:layout_marginTop="13dp"
            android:background="@drawable/custom_checkin_card"
            android:orientation="vertical"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="@string/tao_hoat_dong"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:textColor="@color/black"/>

            <ImageView
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingTop="10dp"
                android:src="@drawable/icon_create"/>
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/hoat_dong_da_to_chuc"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:layout_margin="10dp"
            android:textColor="@color/black"/>

        <LinearLayout
            android:layout_width="380dp"
            android:layout_height="350dp"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:background="@drawable/custom_container_organization">

            <ListView
                android:id="@+id/lvEventOfOrganization"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:layout_width="340dp"
                android:layout_height="match_parent"
                android:divider="@android:color/transparent"
                android:dividerHeight="5dp"
                >

            </ListView>
        </LinearLayout>
    </LinearLayout>

</FrameLayout>