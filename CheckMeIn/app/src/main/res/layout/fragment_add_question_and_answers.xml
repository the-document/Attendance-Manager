<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:id="@+id/fragment_add_question_and_answers_scroll_view">
    <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/fragment_add_question_and_answers_layout"
        android:background="@drawable/custom_add_question_answers_dialog_fragment">

        <EditText
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:id="@+id/fragment_add_question_and_answers_edt_question"
            app:layout_constraintTop_toTopOf="@+id/fragment_add_question_and_answers_layout"
            app:layout_constraintLeft_toLeftOf="@+id/fragment_add_question_and_answers_layout"
            app:layout_constraintRight_toRightOf="@id/fragment_add_question_and_answers_layout"
            android:background="@drawable/custom_button_organization"
            android:hint="Nhập câu hỏi"
            android:gravity="center"
            android:layout_marginTop="32dp"
            android:layout_marginHorizontal="16dp"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/fragment_add_question_and_answers_btn_add_answer"
            android:text="Thêm câu trả lời"
            android:gravity="center"
            android:paddingHorizontal="8dp"
            app:layout_constraintTop_toBottomOf="@+id/fragment_add_question_and_answers_edt_question"
            app:layout_constraintRight_toRightOf="@+id/fragment_add_question_and_answers_layout"
            android:layout_marginTop="16dp"
            android:layout_marginRight="16dp"
            android:textColor="@color/white"
            android:background="@drawable/custom_btn_login_selector"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/fragment_add_question_and_answers_txtView_description"
            app:layout_constraintTop_toBottomOf="@+id/fragment_add_question_and_answers_btn_add_answer"
            app:layout_constraintLeft_toLeftOf="@+id/fragment_add_question_and_answers_layout"
            app:layout_constraintRight_toRightOf="@id/fragment_add_question_and_answers_layout"
            android:paddingHorizontal="16dp"
            android:layout_marginTop="16dp"
            android:text="Bấm vào câu trả lời đúng để chọn câu trả lời đúng."
            android:textSize="16sp"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/fragment_add_question_and_answers_btn_accept"
            android:text="Đồng ý"
            android:gravity="center"
            android:textColor="@color/white"
            android:paddingHorizontal="8dp"
            app:layout_constraintTop_toBottomOf="@id/fragment_add_question_and_answers_txtView_description"
            app:layout_constraintBottom_toBottomOf="@id/fragment_add_question_and_answers_layout"
            app:layout_constraintRight_toRightOf="@+id/fragment_add_question_and_answers_layout"
            android:layout_marginTop="32dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/custom_btn_login_selector"/>


    </android.support.constraint.ConstraintLayout>
</ScrollView>